{
  extends: [
    'config:recommended',
    ':dependencyDashboard',
  ],
  timezone: 'Europe/Warsaw',
  vulnerabilityAlerts: {
    enabled: true,
  },
  packageRules: [
    {
      matchManagers: [
        'bundler',
      ],
      labels: [
        'renovate/bundler',
        'dependency/bundler',
      ],
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchUpdateTypes: [
        'minor',
      ],
      labels: [
        'renovate/image-release',
        'dependency/minor',
      ],
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchUpdateTypes: [
        'patch',
      ],
      automerge: true,
      automergeType: 'pr',
      labels: [
        'renovate/image-release',
        'dependency/patch',
      ],
    },
    {
      matchManagers: [
        'bundler',
      ],
      matchUpdateTypes: [
        'patch',
        'minor',
      ],
      automerge: true,
      automergeType: 'branch'
    },
    {
      matchManagers: [
        'github-actions',
      ],
      automerge: true,
      automergeType: 'pr',
      labels: [
        'renovate/github-actions',
        'dependency/github-actions',
      ],
    },
  ],
}
